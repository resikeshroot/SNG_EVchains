<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"

android:layout_height="match_parent"
android:orientation="vertical">

<!-- Your content before the ScrollView goes here -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/userhome" />

        <!-- Add your views inside this LinearLayout -->


    </LinearLayout>

<!-- ScrollView containing your buttons -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"


    tools:context=".User_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">




        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:background="@drawable/uhbut"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:text="Profile" />

        <!-- Your Button elements go here -->












        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/uhbut"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Charging center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button7"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/uhbut"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Booking Slots" />











        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button12"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/uhbut"
            android:layout_marginBottom="10dp"
            android:text="Send Complaint" />







        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button14"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/uhbut"
            android:layout_marginBottom="10dp"
            android:text="Log Out" />

        <Space
            android:layout_width="match_parent"

            android:layout_height="100dp" />

        <!-- Your existing buttons go here -->

    </LinearLayout>

</ScrollView>

</LinearLayout>







